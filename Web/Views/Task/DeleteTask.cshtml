@model Web.Models.TaskViewModel

@{
    ViewBag.Title = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Message</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.ProjectID)

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Headline
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Headline)
        </dd>

        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Hours to complete
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoursToComplete)
        </dd>

        <dt>
            Created On
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            Completed
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Completed)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "TaskIndex", new { Controller = "Project", id = Model.ProjectID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}